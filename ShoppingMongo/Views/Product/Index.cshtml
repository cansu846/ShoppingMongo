@model List<ResultProductDto>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card p-3">
            <div class="card-body px-0 pt-0 pb-2">
                <h3 class="text-bg-primary mb-5" style="text-align:center">Products</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Product Name</td>
                            <td>Product Price</td>
                            <td>Product Stock Count</td>
                            <td>Product category</td>
                            <td>Delete</td>
                            <td>Update</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td>
                                    <img src="@item.ImageUrl" style="width:100px; height:80px" />
                                    @item.ProductName
                                </td>
                                <td>@item.ProductPrice</td>
                                <td>@item.StockCount</td>
                                <td>@item.CategoryName</td>
                                <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Delete</a></td>
                                <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Product/CreateProduct" class="btn btn-primary">Add Product</a>
            </div>
        </div>
    </div>
</div>
